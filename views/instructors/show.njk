{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar" style="width: 400px; min-height: 400px; background: url('{{ instructor.avatar_url }}') no-repeat center center / cover"></section>

        <section class="details">

            <h3>Detalhes</h3>

            <div class="item">
                <div>Instrutor</div>
                <div>{{ instructor.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ instructor.age }}</div>
            </div>

            <div class="item">
                <div>Sexo</div>
                <div>{{ "Masculino" if instructor.gender == "M" else "Feminino" }}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for instructor in instructor.services %} 
                    <span>{{ instructor }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ instructor.created_at }}</div>
            </div>

            <a href="{{ instructor.id }}/edit/" class="button">Editar</a>
        </section>

    </div>

{% endblock content %}